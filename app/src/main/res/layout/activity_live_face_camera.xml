<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.face.LiveFaceCameraActivity">

    <com.jan.hjselfiecamera.ui.camera.LensEnginePreview
        android:id="@+id/lensPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jan.hjselfiecamera.ui.overlay.GraphicOverlay
            android:id="@+id/faceOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.jan.hjselfiecamera.ui.camera.LensEnginePreview>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cameraSwitchButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_cameraswitch" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cameraRestartButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_restart_camera" />

</RelativeLayout>